include ../../blocks/bullet-list/bullet-list.pug
include ../../blocks/button/button.pug
include ../../blocks/checkbox-list/checkbox-list.pug
include ../../blocks/date-dropdown/date-dropdown.pug
include ../../blocks/dropdown/dropdown.pug
include ../../blocks/facility/facility.pug
include ../../blocks/like-btn/like-btn.pug
include ../../blocks/logo/logo.pug
include ../../blocks/pagination/pagination.pug
include ../../blocks/radio/radio.pug
include ../../blocks/range-slider/range-slider.pug
include ../../blocks/rating/rating.pug
include ../../blocks/review/review.pug
include ../../blocks/text-field/text-field.pug
include ../../blocks/toggle/toggle.pug

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Form elements
  body
  .form-elements__logo
    +logo()
    .form-elements
      .form-elements__main
        .form-elements__column1
          .form-elements__text-field
            +text-field({label: "text field", sublabel:"Default", placeholder: "Email"})
          .form-elements__text-field
            +text-field({label:"text field", sublabel: "Hover / Focus", value: "This is pretty awesome", dateMasked: false, focus: true})
          .form-elements__text-field-dropdown
            +dropdown({label: "dropdown", initValue: "Сколько гостей", expanded: false, applyCleanBtns: true, roundedBottomCorners: true,
              list: [{name: "Взрослые", number: 0, declensions: ["гость", "гостя", "гостей"]},
                    {name: "Дети", number: 0, declensions: ["гость", "гостя", "гостей"]},
                    {name: "Младенцы", number: 0, declensions: ["младенец", "младенца", "младенцев"], notSeparatelyMessage: "Младенцы могут заехать только вместе со взрослыми."}]})
          .form-elements__text-field-masked
            +text-field({label: "masked text field", placeholder: "ДД.ММ.ГГГГ", dateMasked: true})      
          .form-elements__date-dropdown-double
            +date-dropdown({type: "double", label_1: "date dropdown", label_2: "date dropdown", value_2: "19.08.2019" })
          .form-elements__filter-dropdown 
            +date-dropdown({type: "single", label_1: "filter date dropdown", text_value: '19 авг - 23 авг', value_1: "19.08.2019-23.08.2019"})
          .form-elements__subscription
            +text-field({type: "subscription", label: "subscription text field", placeholder: "Email"})
          .form-elements__open-dropdown-column1
            +dropdown({label: "dropdown", sublabel:"Default", initValue: "Удобства", expanded: false, applyCleanBtns: false,
              list: [{name: "Спальни", number: 2, declensions: ["спальня", "спальни", "спален"]},
                    {name: "Кровати", number: 2, declensions: ["кровать", "кровати", "кроватей"]},
                    {name: "Ванные комнаты", number: 0, declensions: ["ванная комната", "ванных комнаты", "ванных комнат"]}]})
          .form-elements__open-dropdown-column1.form-elements__open-dropdown-column1_expanded
            +dropdown({label: "dropdown", sublabel:"Expanded", initValue: "Удобства", expanded: true, applyCleanBtns: false,
              list: [{name: "Спальни", number: 2, declensions: ["спальня", "спальни", "спален"]},
                    {name: "Кровати", number: 2, declensions: ["кровать", "кровати", "кроватей"]},
                    {name: "Ванные комнаты", number: 0, declensions: ["ванная комната", "ванных комнаты", "ванных комнат"]}]})
          .form-elements__expandable-checkbox
            +checkbox-list({label: "expandable checkbox list", expandable: true, collapsed: true, list: [
                      {label: "Завтрак", id: "breakfast", checked: false}, 
                      {label: "Письменный стол", id: "desk", checked: true},
                      {label: "Стул для кормления", id: "chairForFeeding", checked: true},
                      {label: "Кроватка", id: "crib", checked: true},
                      {label: "Телевизор", id: "tv", checked: false},                
                      {label: "Шампунь", id: "shampoo", checked: false}]})
          .form-elements__expandable-checkbox(class= "form-elements__expandable-checkbox_open")
            +checkbox-list({label: "expandable checkbox list", expandable: true, list: [
                      {label: "Завтрак", id: "breakfast", checked: false}, 
                      {label: "Письменный стол", id: "desk", checked: true},
                      {label: "Стул для кормления", id: "chairForFeeding", checked: true},
                      {label: "Кроватка", id: "crib", checked: true},
                      {label: "Телевизор", id: "tv", checked: false},                
                      {label: "Шампунь", id: "shampoo", checked: false}]}) 
          .form-elements__facilities
            +facility({type: "Комфорт", name: "Шумопоглощающие стены", icon: "icon-insert_emoticon"})
            +facility({type: "Удобство", name: "Окно в каждой из спален", icon: "icon-location_city"})  
        .form-elements__columns2-3
          .form-elements__columns2-3-main 
            .form-elements__column2
              .form-elements__checkbox
                +checkbox-list({label: "checkbox buttons", list: [
                          {label: "Можно курить", id: "canSmoke", checked: false}, 
                          {label: "Можно с питомцами", id: "withPets", checked: true},
                          {label: "Можно пригласить гостей (до 10 человек)", id: guests10, checked: true}]})
              .form-elements__radio-btns
                .form-elements__block-title Radio buttons
                .form-elements__radio-btns-flex-wrap
                  +radio("sex", "Мужчина", true) 
                  +radio("sex", "Женщина", false)  
              .form-elements__toggles
                .form-elements__block-title Toggle
                .form-elements__toggles-flex-wrap
                  +toggle("Получать спецпредложения", true) 
                  +toggle("Получать спецпредложения", false) 
              .form-elements__likes
                .form-elements__block-title Like button
                .form-elements__likes-flex-wrap
                  +like-btn({numberOfLikes: "2", active: false, iconColor: "gradient", borderColor: "solid-color"})
                  +like-btn({numberOfLikes: "12", active: true, iconColor: "gradient", borderColor: "solid-color"})  
              .form-elements__block-title Rate button
              .form-elements__rating
                +rating("form-elements__01", 4, 5)
                +rating("form-elements__02", 5, 5)
              .form-elements__open-dropdown-column2
                +dropdown({label: "dropdown", initValue: "Сколько гостей", expanded: true, applyCleanBtns: true, roundedBottomCorners: true,
                  list: [{name: "Взрослые", number: 0, declensions: ["гость", "гостя", "гостей"]},
                        {name: "Дети", number: 0, declensions: ["гость", "гостя", "гостей"]},
                        {name: "Младенцы", number: 0, declensions: ["младенец", "младенца", "младенцев"], 
                        notSeparatelyMessage: "Младенцы могут заехать только вместе со взрослыми."}]})
              .form-elements__rich-checkbox
                +checkbox-list({label: "rich checkbox buttons", type: "rich", list: [
                          {label: "Широкий коридор", description: "Ширина коридоров в номере не менее 91 см.", id: "wideСorridor", checked: false},                                  
                          {label: "Помощник для инвалидов", description: "На 1 этаже вас встретит специалист  и проводит до номера.", id: "assistantForTheDisabled", checked: false}]})      
            .form-elements__column3
              .form-elements__range-slider
                +range-slider({label: "Range slider", rangeStart: "5000", rangeEnd: "10000", min: "0", max: "15000"})
              .form-elements__block-title Buttons
              .form-elements__buttons-double
                +button({text: "Click me", type: "background"})
                +button({text: "Click me", type: "background", hover: true})
              .form-elements__buttons-double.form-elements__buttons-double_border
                +button({text: "Click me", type: "border"})
                +button({text: "Click me", type: "border", hover: true})
              .form-elements__buttons-double-no-border
                +button({text: "Click me", type: "text-only"})
                +button({text: "Click me", type: "text-only", hover: true})
              .form-elements__buttons-single-long
                +button({text: "Перейти к оплате", type: "background", submit: true})
              .form-elements__block-title Pagination
              .form-elements__pagination
                +pagination()
              .form-elements__open-dropdown-column3
                +dropdown({label: "dropdown", initValue: "Сколько гостей", expanded: true, applyCleanBtns: true, roundedBottomCorners: true,
                  list: [{name: "Взрослые", number: 2, declensions: ["гость", "гостя", "гостей"]},
                        {name: "Дети", number: 1, declensions: ["гость", "гостя", "гостей"]},
                        {name: "Младенцы", number: 0, declensions: ["младенец", "младенца", "младенцев"], 
                        notSeparatelyMessage: "Младенцы могут заехать только вместе со взрослыми."}]})
              .form-elements__block-title-bullet-list Bullet list
              .form-elements__bullet-list
                +bullet-list(["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"])
          .form-elements__column2-3-footer
            .form-elements__review
              +review({userImgSrc: require("../../assets/images/user.jpg"), userName: "Мурад Сарафанов", lastVisit: "5 дней назад", likes: {numberOfLikes: "12", active: true, iconColor: "solid-color", borderColor: "gradient"}, 
              content: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."})

                  
            
    