              {number: "678", roomType: "", price: "5500", reviews: 45, rating: {rating: 5, itemsNumber: 5},
               roomImages: [require("../../assets/images/room-678.png"), require("../../assets/images/room-second.png"), require("../../assets/images/room-678.png"), require("../../assets/images/room-second.png")]},
              {number: "450", roomType: "", price: "5300", reviews: 39, rating: {rating: 4, itemsNumber: 5},
