               roomImages: [require("../../assets/images/room-666.png"), require("../../assets/images/room-second.png"), require("../../assets/images/room-666.png"), require("../../assets/images/room-second.png")]},
              {number: "444", roomType: "", price: "5000", reviews: 15, rating: {rating: 3, itemsNumber: 5},
               roomImages: [require("../../assets/images/room-444.png"), require("../../assets/images/room-second.png"), require("../../assets/images/room-444.png"), require("../../assets/images/room-second.png")]},
              {number: "352", roomType: "", price: "5000", reviews: 55, rating: {rating: 3, itemsNumber: 5},
               roomImages: [require("../../assets/images/room-second.png"), require("../../assets/images/room-second.png"), require("../../assets/images/room-second.png"), require("../../assets/images/room-second.png")]}
              ]
          each room in roomsData
            +room(room)
        .search-room__pagination
          +pagination()
      