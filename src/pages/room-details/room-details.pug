extends ../../page-layout/template/template.pug

include ../../blocks/booking/booking.pug
include ../../blocks/bullet-list/bullet-list.pug
include ../../blocks/diagram/diagram.pug
include ../../blocks/facility/facility.pug
include ../../blocks/review/review.pug

block vars
  - const pageTitle = "Room details"
  - const userName = ""
block content
  .room-details
    .room-details__images-grid
      image.room-details__grid-image.room-details__grid-image-1(src = require("../../assets/images/room-888.png") alt= "room image")
      image.room-details__grid-image.room-details__grid-image-2(src = require("../../assets/images/room-888-02.png") alt= "room image")
      image.room-details__grid-image.room-details__grid-image-3(src = require("../../assets/images/room-888-03.png") alt= "room image")
    .room-details__container
      .room-details__main
        .room-details__top-flex
          .room-details__info
            h2.room-details__title.room-details__title_facilities Сведения о номере
            .room-details__facility
              +facility({type: "Комфорт", name: "Шумопоглощающие стены", icon: "icon-insert_emoticon"})
            .room-details__facility
              +facility({type: "Удобство", name: "Окно в каждой из спален", icon: "icon-location_city"}) 
            .room-details__facility.room-details__facility_cosiness
              +facility({type: "Уют", name: "Номер оснащен камином", icon: "icon-whatshot"}) 
          .room-details__impression
            h2.room-details__title.room-details__title_impression Впечатления от номера
            .room-details__diagram
              +diagram({activeSectorNumber: "260", items: [{name: "Великолепно", number: "520", percent: "49.5", index: 1},
                        {name: "Удовлетворительно", number: "260", percent: "24.5", index: 3},
                        {name: "Хорошо", number: "260", percent: "24.5", index: 2},
                        {name: "Разочарован", number: "0", percent: "0", index: 4}]})
        .room-details__reviews
          .room-details__reviews-title-flex
            h2.room-details__title Отзывы посетителей номера
            .room-details__reviews-number 2 отзыва
          .room-details__review
            +review({userImgSrc: require("../../assets/images/user-1.png"), userName: "Мурад Сарафанов", lastVisit: "5 дней назад", likes: {numberOfLikes: "12", active: true, iconColor: "gradient", borderColor: "solid-color"}, 
            content: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."})
          .room-details__review
            +review({userImgSrc: require("../../assets/images/user-2.png"), userName: "Патрисия Стёклышкова", lastVisit: "Неделю назад", likes: {numberOfLikes: "2", active: false, iconColor: "gradient", borderColor: "solid-color"}, 
            content: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"})
        .room-details__bottom-flex
          .room-details__rules
            h2.room-details__title.h2.room-details__title_rules Правила
            +bullet-list(["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"])
          .room-details__cancellation
            h2.room-details__title.h2.room-details__title_cancellation Отмена
            .room-details__cancellation-text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      .room-details__booking
        +booking({number: "888", roomType: "люкс", price: "9990", discount: "2179", extraServiceFee: "300",
            dates: {type: "double", label_1: "прибытие", label_2: "выезд", value_1: "19.08.2019", value_2: "23.08.2019" },
            guests: {label: "гости", initValue: "Сколько гостей", expanded: false, applyCleanBtns: true, roundedBottomCorners: true,
            list: [{name: "Взрослые", number: 3, declensions: ["гость", "гостя", "гостей"]},
                  {name: "Дети", number: 0, declensions: ["гость", "гостя", "гостей"]},
                  {name: "Младенцы", number: 0, declensions: ["младенец", "младенца", "младенцев"], notSeparatelyMessage: "Младенцы могут заехать только вместе со взрослыми."}]}})